<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".activity.FindInfo_Activity">

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/info_back"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@mipmap/left_shape"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_36"
                android:textColor="#fff"
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="lly"

                android:textSize="@dimen/dp_16" />

        </RelativeLayout>


        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
            android:id="@+id/info_cinema"
            android:layout_width="@dimen/dp_280"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/dp_120"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayer>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/background_gradient"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_104" />
            <android.support.v7.widget.RecyclerView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_65"
                android:id="@+id/info_chose_recycle"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_168"></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/xuanzhong"
                android:gravity="center_horizontal"
                android:layout_below="@id/info_chose_recycle"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:background="@drawable/screen_checkbox"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:button="@null"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="可选"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:background="@drawable/screen_checkboxy"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:button="@null"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="已售"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:background="@drawable/screen_checkboxd"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:button="@null"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="选中"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/info_name2"
                android:textSize="@dimen/dp_14"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_below="@+id/xuanzhong"
                android:layout_marginTop="@dimen/dp_15"
                android:text="lly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/info_paiqi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

    <Button
        android:text="0.1"
        android:background="#f00"
        android:layout_alignParentBottom="true"
        android:id="@+id/zhifu_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>