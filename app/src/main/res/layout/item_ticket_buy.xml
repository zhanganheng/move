<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ticket_src"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_140"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20" />

    <TextView
        android:id="@+id/ticket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/ticket_src"
        android:text="name"
        android:textColor="#fff"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/orid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_toRightOf="@id/ticket_src"
        android:text="订    单    号"
        android:textColor="#fff"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/ticket_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_toRightOf="@id/orid"
        android:text="订单号"
        android:textColor="#fff"
        android:textSize="@dimen/dp_12" />


    <TextView
        android:id="@+id/orid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_toRightOf="@id/ticket_src"
        android:text="创建时间"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/ticket_tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_toRightOf="@id/orid2"
        android:text="创建时间"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/ticket_tv_xiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@id/ticket_src"
         android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/orid2"
        android:text="查看详情>>"
        android:textColor="#fff" />

</RelativeLayout>