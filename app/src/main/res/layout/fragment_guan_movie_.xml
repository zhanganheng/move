<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frag.Guan_movie_Fragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/guan_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/guan_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sou_img"
            android:layout_width="@dimen/dp_164"
            android:layout_height="@dimen/dp_164"
            android:layout_centerInParent="true"
            android:src="@mipmap/guanzhupic" />

        <TextView
            android:layout_width="@dimen/dp_112"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sou_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:text="     暂无关注信息"
            android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>