<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".activity.MyMessage_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/find_letf"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_47"
            android:src="@mipmap/left_shape" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_47"
            android:layout_toRightOf="@id/find_letf"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_40"
            android:text="我的预约"
            android:textColor="#fff"
            android:textSize="@dimen/dp_16" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="@dimen/dp_315"
        android:id="@+id/mysuccess_view"
        android:background="#1c2243"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>