<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    tools:context=".activity.XiangCinemaActivity">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/find_letf"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_47"
            android:src="@mipmap/left_shape" />
        <TextView
            android:layout_marginTop="@dimen/dp_47"
            android:layout_toRightOf="@id/find_letf"
            android:text="影院详情"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:textSize="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/xiang_name"
        android:layout_marginTop="@dimen/dp_23"
        android:textColor="#fff"
        android:textSize="@dimen/dp_14"
        android:text="lly"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:text="关注"
            android:textSize="@dimen/dp_10"
            android:layout_below="@id/guanzhu_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:button="@null"
            android:id="@+id/guanzhu_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="0dp"
            android:background="@mipmap/emptyheart" />
    </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/xiang_but"
            android:layout_marginLeft="@dimen/dp_24"
            android:textColor="#d3af56"
            android:text="lly"
            android:textSize="@dimen/dp_12"
            android:background="@drawable/kuang_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/qu"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_80"
            android:layout_alignParentRight="true"
            android:src="@mipmap/group_10"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_16" />
        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:text="到这里去"
            android:textSize="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/paiqi_but"
            android:textColor="#fff"
            android:background="#f00"
            android:text="查看该影院电影排期"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/xiang_but"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TabLayout
                android:id="@+id/xiang_tab"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                 app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextColor="#fff"
                android:layout_height="wrap_content">
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/xiang_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>