<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/movie_src"
        android:layout_width="@dimen/dp_84"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_height="@dimen/dp_100" />
    <TextView
        android:text="lly"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/movie_name"
        android:textColor="#fff"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@id/movie_src"
        android:textSize="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="lly"
        android:id="@+id/movie_dao"
        android:textColor="#fff"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@id/movie_src"
        android:layout_below="@id/movie_name"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="lly"
        android:id="@+id/movie_zhu"
        android:textColor="#fff"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@id/movie_src"
        android:layout_below="@id/movie_dao"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="lly"
        android:id="@+id/movie_pin"
        android:textColor="#fff"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@id/movie_src"
        android:layout_below="@id/movie_zhu"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#fff"
        android:id="@+id/text_10"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/movie_src"
        android:textSize="@dimen/dp_14"
        android:text="我的评价"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#fff"
        android:text="lly"
        android:id="@+id/movie_text"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_below="@id/text_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#fff"
        android:id="@+id/movie_fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_text"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_10"
        android:text="lly" />

    <TextView
        android:textColor="#fff"
        android:id="@+id/movie_time"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/movie_text"
        android:layout_marginRight="@dimen/dp_30"
        android:text="lly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
