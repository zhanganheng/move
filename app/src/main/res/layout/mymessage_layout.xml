<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#1c2243"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_height="wrap_content">

     <TextView
         android:id="@+id/dian"
         android:layout_marginTop="@dimen/dp_17"
         android:layout_marginLeft="@dimen/dp_38"
         android:background="@drawable/but_yuan"
         android:layout_width="@dimen/dp_10"
         android:layout_height="@dimen/dp_10" />
    <TextView
        android:id="@+id/xin_title"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_toRightOf="@+id/dian"
        android:layout_marginLeft="@dimen/dp_8"
        android:text="购票信息"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/xin_text"
        android:layout_below="@+id/xin_title"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_toRightOf="@+id/dian"
        android:text="购票信息"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/xin_time"
        android:layout_marginRight="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_14"
        android:text="购票信息"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
