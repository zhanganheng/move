<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_yp_back"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_40"
                android:src="@mipmap/left_shape"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>
            <TextView
                android:layout_marginTop="@dimen/dp_37"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:text="写评价"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:background="#1c2243"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38">
            <TextView
                android:id="@+id/tv_yp_name"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="悲伤逆流成河"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_pingfen"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"
            android:text="我的评分(5.5分)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:id="@+id/rb_yp_pingfen"
            android:layout_marginLeft="@dimen/dp_18"
            android:progressTint="#EC066C"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/dp_10"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_26"
                android:text="极差"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/dp_10"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_70"
                android:text="较差"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/dp_10"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_114"
                android:text="一般"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="@dimen/dp_10"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_158"
                android:text="不错"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/dp_10"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_202"
                android:text="很好"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="#fff"
            android:text="写下您对影片的看法吧"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="#fff"
            android:id="@+id/et_yp_movie"
            android:background="#1c2243"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_129"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_alignParentBottom="true"
                android:id="@+id/bt_yp_push"
                android:layout_marginTop="@dimen/dp_40"
                android:text="提交"
                android:textColor="#fff"
                android:layout_marginBottom="@dimen/dp_60"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button"
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_36"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>