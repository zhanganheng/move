<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        app:roundAsCircle="true"
        android:id="@+id/pin_img"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44" />


    <TextView
        android:textColor="#fff"
        android:id="@+id/pin_name"
        android:text="lly"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/pin_img"
        android:textSize="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#fff"
        android:id="@+id/pin_time"
        android:text="lly"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_25"
        android:textSize="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#fff"
        android:id="@+id/pin_text"
        android:text="lly"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/pin_img"
        android:textSize="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/xiang_dianzan1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/pin_text"
        android:src="@mipmap/dianzan_1"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18" />

    <TextView
        android:textColor="#fff"
        android:id="@+id/pin_number"
        android:text="ly"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_alignBottom="@id/xiang_dianzan1"
        android:layout_toRightOf="@id/xiang_dianzan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#fff"
        android:id="@+id/pin_people"
        android:text="ly"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/dp_10"
        android:layout_alignBottom="@id/xiang_dianzan1"
        android:layout_marginRight="@dimen/dp_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
