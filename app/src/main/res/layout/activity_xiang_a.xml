<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".activity.XiangAActivity">

    <ImageView
        android:src="@mipmap/left_shape"
        android:id="@+id/details_back"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_35"
         />

    <android.support.v4.widget.NestedScrollView
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.facebook.drawee.view.SimpleDraweeView
                android:src="@mipmap/left_shape"
                android:id="@+id/xiang_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_500" />

            <LinearLayout
                android:layout_margin="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_alignBottom="@id/xiang_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/details_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/xiang_img"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:text="sad"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/details_critic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_toRightOf="@id/details_mark"
                    android:text="65465"
                    android:textColor="#fff" />
            </LinearLayout>

            <TextView
                android:id="@+id/details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xiang_img"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:text="电影名"
                android:textSize="@dimen/dp_14"
                android:textColor="#fff" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:text="关注"
                    android:textSize="@dimen/dp_10"
                    android:layout_below="@id/guanzhu_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:button="@null"
                    android:id="@+id/guanzhu_img"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@mipmap/emptyheart"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />

            </RelativeLayout>

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:textSize="@dimen/dp_12"
                   android:id="@+id/details_type"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_25"
                   android:layout_marginTop="@dimen/dp_15"
                   android:text="类型"
                   android:textColor="#fff" />

               <TextView
                   android:layout_marginRight="@dimen/dp_20"
                   android:layout_toRightOf="@id/details_type"
                   android:textSize="@dimen/dp_12"
                   android:id="@+id/details_time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginTop="@dimen/dp_15"
                   android:text="类型"
                   android:textColor="#fff" />
           </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/dp_12"
                    android:id="@+id/details_long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="播放时间"
                    android:textColor="#fff" />

                <TextView

                    android:layout_toRightOf="@id/details_long"
                    android:textSize="@dimen/dp_12"
                    android:id="@+id/details_diqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="播放时间"
                    android:textColor="#fff" />
            </RelativeLayout>



        <android.support.design.widget.TabLayout
            android:id="@+id/xiang_tab"
            app:tabTextColor="#fff"
            app:tabGravity="fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/xiang_vp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_640"></android.support.v4.view.ViewPager>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_reviews"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:background="#e8be18"
        android:text="写影评"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_seat"
        android:layout_width="@dimen/dp_210"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_reviews"
        android:background="#e8185e"
        android:text="选座购票"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />
</RelativeLayout>