<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line"
        android:orientation="vertical"
        android:background="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_317"/>

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <EditText
           android:lines="1"
           android:hint="请输入昵称"
           android:id="@+id/edit_name"
           android:textSize="14sp"
           android:paddingLeft="@dimen/dp_20"
           android:textColor="@color/gray"
           android:background="@drawable/edit"
           android:textColorHint="@color/gray"
           android:layout_marginLeft="@dimen/dp_24"
           android:layout_marginRight="@dimen/dp_24"
           android:layout_width="@dimen/dp_312"
           android:layout_height="@dimen/dp_44"/>
       <EditText
           android:lines="1"
           android:layout_marginTop="@dimen/dp_10"
           android:id="@+id/edit_email"
           android:hint="请输入邮箱账号"
           android:textSize="14sp"
           android:paddingLeft="@dimen/dp_20"
           android:textColor="@color/gray"
           android:background="@drawable/edit"
           android:textColorHint="@color/gray"
           android:layout_marginLeft="@dimen/dp_24"
           android:layout_marginRight="@dimen/dp_24"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_44"/>
       <EditText
           android:lines="1"
           android:layout_marginTop="@dimen/dp_10"
           android:id="@+id/edit_pwd"
           android:hint="请设置密码"
           android:textSize="14sp"
           android:paddingLeft="@dimen/dp_20"
           android:textColor="@color/gray"
           android:background="@drawable/edit"
           android:textColorHint="@color/gray"
           android:layout_marginLeft="@dimen/dp_24"
           android:layout_marginRight="@dimen/dp_24"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_44"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <EditText
               android:lines="1"
               android:layout_marginTop="@dimen/dp_10"
               android:id="@+id/edit_code"
               android:hint="请输入验证码"
               android:textSize="14sp"
               android:paddingLeft="@dimen/dp_20"
               android:textColor="@color/gray"
               android:background="@drawable/edit"
               android:textColorHint="@color/gray"
               android:layout_marginLeft="@dimen/dp_24"
               android:layout_width="@dimen/dp_216"
               android:layout_height="@dimen/dp_44"/>
           <Button
               android:lines="1"
               android:id="@+id/get_yan"
               android:layout_marginRight="@dimen/dp_14"
               android:text="获取验证码"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_49" />
       </LinearLayout>

       <TextView
           android:id="@+id/_fanhui"
           android:layout_marginTop="@dimen/dp_10"
           android:textSize="10dp"
            android:layout_marginLeft="@dimen/dp_252"
           android:textColor="#fff"
           android:text="已有账号，立即登陆"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <Button
           android:id="@+id/but_zhu"
           android:text="注 册"
           android:background="@drawable/btn"
           android:layout_marginTop="@dimen/dp_15"
           android:layout_marginLeft="@dimen/dp_24"
           android:layout_marginRight="@dimen/dp_24"
           android:layout_width="@dimen/dp_312"
           android:layout_height="@dimen/dp_44"/>
   </LinearLayout>





</LinearLayout>