<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    android:orientation="vertical">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/find_letf"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_47"
        android:src="@mipmap/left_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_toRightOf="@id/find_letf"
        android:gravity="center_horizontal"
        android:layout_marginRight="@dimen/dp_40"
        android:text="我的电影票"
        android:textColor="#fff"
        android:textSize="@dimen/dp_16" />
  </RelativeLayout>
  <android.support.v7.widget.RecyclerView
      android:layout_marginTop="@dimen/dp_20"
      android:id="@+id/recycler_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

  <RelativeLayout
      android:id="@+id/relayout_gone"
      android:visibility="gone"
      android:layout_gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:layout_centerHorizontal="true"
        android:text="扫码取票"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/erwema_src"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_171"
        android:layout_height="@dimen/dp_174" />
    <Button
        android:layout_below="@id/erwema_src"
        android:id="@+id/ider_btn"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_72"
        android:background="@drawable/but_shape"
        android:text="取消"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12" />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/ticket_layout"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sou_img"
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_164"
        android:layout_centerInParent="true"
        android:src="@mipmap/guanzhupic" />

    <TextView
        android:layout_width="@dimen/dp_112"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sou_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        android:text=" 暂无信息！亲"
        android:textColor="#fff" />
  </RelativeLayout>
</LinearLayout>